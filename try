#!/bin/bash

# If -pg is used here, be sure to run toilet only once below, probably not with valgrind
CFLAGS="-ggdb" make || exit $?

# Uncomment to use valgrind
#export VALGRIND="valgrind --trace-children=yes --leak-check=full"

HOST="`hostname`"
if [ "${HOST#kudos-}" == "$HOST" -a "$HOST" != "execl" ]
then
	echo "Not running on a kudos-* test machine, won't overwrite your file systems."
	exit 1
fi

echo -n "Creating file system... "
sudo mke2fs -m 0 -b 4096 /dev/sdb1 &> /dev/null
sudo mount /dev/sdb1 /mnt/test -t ext2
sudo chown `whoami` /mnt/test
cp demo /mnt/test
cat > /mnt/test/tests << EOF
journal create tj
journal append record1
journal append record2
journal commit
journal playback
journal erase
tx
str_tbl
dtable
ctable
stable
EOF
mkdir /mnt/test/journals
sudo umount /mnt/test
echo "done."

echo -n "Loading Featherstitch... "
sudo insmod fstitch/kfstitchd.ko device=/dev/sdb
[ -f /proc/kfstitchd_debug ] && (cat /proc/kfstitchd_debug > try.fdb &) || rm -f try.fdb
sudo mount /mnt/test
echo "done."

# Run the performance test
echo "performance" | (WD="`pwd`"; cd /mnt/test; ulimit -c unlimited; exec $VALGRIND "$WD/toilet")
ls -lR /mnt/test

if [ ! -f /mnt/test/core ]
then
	# Run some tests
	#echo "script tests" | (WD="`pwd`"; cd /mnt/test; ulimit -c unlimited; exec $VALGRIND "$WD/toilet")
	#ls -lR /mnt/test
	
	# Run the old demo
	#echo "script demo" | (WD="`pwd`"; cd /mnt/test; ulimit -c unlimited; exec $VALGRIND "$WD/toilet")
	#ls -lR /mnt/test
	
	# Allow custom commands
	#(WD="`pwd`"; cd /mnt/test; ulimit -c unlimited; exec $VALGRIND "$WD/toilet")
	#ls -lR /mnt/test
	
	# Filter the system journal
	true | (WD="`pwd`"; cd /mnt/test; ulimit -c unlimited; exec $VALGRIND "$WD/toilet")
	ls -l /mnt/test/sys_journal*
fi

echo "Unloading Featherstitch... "
sudo umount /mnt/test
sudo rmmod kfstitchd
echo "done."

echo -ne \\007

sudo mount /dev/sdb1 /mnt/test -t ext2
if [ -f /mnt/test/core ]
then
	echo "Starting debugger on core."
	gdb -c /mnt/test/core main
fi
if [ -f /mnt/test/gmon.out ]
then
	cp /mnt/test/gmon.out .
	gprof main gmon.out > gmon.sum
else
	rm -f gmon.out gmon.sum
fi
sudo umount /mnt/test
